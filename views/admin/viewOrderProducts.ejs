<%- include('../partials/adminPartials/adminPartial.ejs') %>

<section class=" gradient-custom ">
    <div class="container py-5 h-100">
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-lg-10 col-xl-8">
          <div class="card shadow" style="border-radius: 10px;">
            
            <div class="card-body p-4">
              <div class="d-flex justify-content-between align-items-center mb-4">
                <p class="lead fw-normal mb-0">Product Details</p>
              </div>
  
              <% for(let product of orderItems) { %> 
              <div class="card shadow-0 border mb-4">
                <div class="card-body">
                  <div class="row">
                    <div class="col-md-2">
                      <img src="<%=product.product.images[0].url%>"
                        class="img-fluid" alt="Phone">
                    </div>
                    <div class="col-md-2 text-center d-flex justify-content-center align-items-center">
                      <p class="text-muted mb-0"><%= product.product.name %> </p>
                    </div>
                    
                    <div class="col-md-2 text-center d-flex justify-content-center align-items-center">
                      <p class="text-muted mb-0 small">Qty: <%= product.quantity %> </p>
                    </div>
                    <div class="col-md-2 text-center d-flex justify-content-center align-items-center">
                      <p class="text-muted mb-0 small">Rs. <%= product.product.price %> </p>
                    </div>
                  </div>
                  <hr class="mb-4" style="background-color: #e0e0e0; opacity: 1;">
                  <div class="row d-flex align-items-center">
                    <div class="col-md-2">
                      <p class="text-muted mb-0 small">Track Order</p>
                    </div>
                    <div class="col-md-10">
                      <div class="progress" style="height: 6px; border-radius: 16px;">
                        <div class="progress-bar" role="progressbar"
                          style="width: 65%; border-radius: 16px; background: linear-gradient(90deg, #ffba00 0%, #ff6c00 100%);" aria-valuenow="65"
                          aria-valuemin="0" aria-valuemax="100"></div>
                      </div>
                      <div class="d-flex justify-content-around mb-1">
                        <p class="text-muted mt-1 mb-0 small ms-xl-5">Out for delivary</p>
                        <p class="text-muted mt-1 mb-0 small ms-xl-5">Delivered</p>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
              <% } %> 
  
              <div class="d-flex justify-content-between pt-2">
                <p class="fw-bold mb-0">Order Details</p>
                <p class="fw-bold mb-0">Payment Summary</p>
              </div>
  
              <div class="d-flex justify-content-between pt-2">
                <p class="text-muted mb-0">Order ID : <%=order[0]._id%></p>
                <p class="text-muted mb-0">
                  <span class="me-4">Total</span> Rs. <%=order[0].total%>
                </p>
              </div>
  
              <div class="d-flex justify-content-between">
                <p class="text-muted mb-0">
                  Order Date : <%= order[0].orderDate %>
                </p>
                <p class="text-muted mb-0">
                  <span class="me-4">Delivery Charges</span> Free
                </p>
              </div>
  
              <div class="d-flex justify-content-between mb-5"></div>
              <div
                class="card-footer border-0 px-4 py-5"
                style="
                  background: linear-gradient(90deg, #ffba00 0%, #ff6c00 100%);
                  border-bottom-left-radius: 10px;
                  border-bottom-right-radius: 10px;
                "
              >
                <h5
                  class="d-flex align-items-center justify-content-end text-white text-uppercase mb-0"
                >
                  Total paid:
                  <span class="h2 mb-0 ms-2">Rs.<%= order[0].total%></span>
                </h5>
              </div>
            </div>
           
          </div>
        </div>
      </div>
    </div>
    <script>
      const lis = document.querySelectorAll(".nav-item");
  
      for (const li of lis) {
        li.addEventListener("click", function () {
          for (const otherLi of lis) {
            otherLi.removeAttribute("style");
          }
          li.setAttribute("style", "background-color: yellow;");
          sessionStorage.setItem("selectedListItem", li.innerHTML);
        });
      }
  
      const selectedListItem = sessionStorage.getItem("selectedListItem");
      if (selectedListItem) {
        for (const li of lis) {
          if (li.innerHTML === selectedListItem) {
            li.setAttribute("style", "background-color: yellow;");
          }
        }
      }
    </script>
  </section>