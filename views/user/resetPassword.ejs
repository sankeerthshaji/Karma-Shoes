<%- include('../partials/userPartials/userHeader') %>

<!-- Start Banner Area -->
<section class="banner-area organic-breadcrumb">
  <div class="container">
    <div
      class="breadcrumb-banner d-flex flex-wrap align-items-center justify-content-end"
    >
      <div class="col-first">
        <h1>Change Password</h1>
      </div>
    </div>
  </div>
</section>
<!-- End Banner Area -->

<section>
  <div class="container mt-4">
    <div class="row">
      <div class="col-md-6">
        <h2 class="text-center">Change Password</h2>
        <form action="/resetPassword" method="post">
            <% if(locals.err_message1) { %> 
                <p class="error" style="color:red"><%= err_message1 %> </p>
                <% } %> 
            <% if(locals.err_message2) { %> 
                <p class="error" style="color:red"><%= err_message2 %> </p>
                <% } %> 
          <label for="newPassword">New Password</label>
          <input
            type="password"
            name="newPassword"
            id="newPassword"
            class="form-control"
            required
          />

          <label for="confirmPassword">Confirm Password</label>
          <input
            type="password"
            name="confirmPassword"
            id="confirmPassword"
            class="form-control"
            required
          />

          <input type="email" value="<%=email%>" name="email" hidden>

          <div class="mt-3">
            <button class="btn btn-primary profile-button" type="submit">
              Update
            </button>
          </div>
          <br />
        </form>
      </div>
    </div>
  </div>
</section>

<%- include('../partials/userPartials/userFooter') %>
